<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HomePage"
    android:orientation="vertical"
    android:padding="40dp"
    android:background="#ffff">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="What's In My Fridge"
        android:textAlignment="center"
        android:textColor="@color/golden_gate_orange"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        app:srcCompat="@drawable/pic3" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="148dp">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="match_parent"
            android:layout_height="47dp"

            app:srcCompat="@drawable/btn_bg" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="179dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:text="My Fridge List"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/pic5" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="147dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            app:srcCompat="@drawable/btn_bg" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Get Recipes"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_marginTop="49dp"
            app:srcCompat="@drawable/picc5" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="147dp">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            app:srcCompat="@drawable/btn_bg" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Get Ingredients"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="49dp"
            app:srcCompat="@drawable/pic2" />
    </androidx.cardview.widget.CardView>

</LinearLayout>

